<div class="account-management">
  <h1><%- title %></h1>
  <%- messages() %> <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %> <% if(locals.accountData.account_type == "Client") { %>
  <h2>Welcome <%- locals.accountData.account_firstname %></h2>
  <a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a>
  <% } else if(locals.accountData.account_type == "Employee" ||
  locals.accountData.account_type == "Admin") { %>
  <h2>Welcome <%- locals.accountData.account_firstname %></h2>
  <a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>

  <h3 class="logged-in">You're logged in!</h3>
</div>
